                        <button class="btn btn-secondary mr-2" type="button" data-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary ml-2" id="logoutButton">Logout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('logoutButton').addEventListener('click', function () {
            // Xóa token khỏi localStorage hoặc sessionStorage
            localStorage.removeItem('Token'); // Nếu bạn đang lưu token ở localStorage
            sessionStorage.removeItem('Token'); // Hoặc nếu bạn lưu token ở sessionStorage

            // Chuyển hướng đến trang đăng xuất hoặc trang chủ
            window.location.href = '/'; // Địa chỉ URL bạn muốn chuyển hướng
        });
    </script>

