@{
    Layout = "_AdminLayout";
}

    <div class="card">
        <div class="d-flex justify-content-end mb-3">
            <!-- Căn phải cho nút -->
        <button style="display: none;" data-auth="vaitro_add" class="btn btn-success mt-2 " onclick="openAddRoleModal()">Thêm vai trò mới</button> <!-- Nút thêm nhân viên -->
        </div>
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Danh sách vai trò</h3> <!-- Tiêu đề danh sách -->
        </div>
        <div class="card-body">
            <div id="roleContainer">
                @Html.Partial("_RoleList") <!-- Chèn Partial View -->
            </div>
        </div>
    </div>


<div class="modal fade" id="addRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Thêm vai trò mới</h2>
                <button class="close" type="button" data-bs-dismiss="modal" aria-label="Close">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <form id="addRoleForm">
                    <div class="mb-3">
                        <label for="rolename" class="form-label">Vai trò</label>
                        <input type="text" class="form-control" id="rolename" placeholder="Vai trò" required>
                    </div>
                    <div class="mb-3">
                        <label for="roleinfo" class="form-label">Thông tin vai trò</label>
                        <input type="text" class="form-control" id="roleinfo" placeholder="Thông tin vai trò" required>
                    </div>
                    <p id="ermessage" style="color: red; display: none;"></p>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="addRole" onclick="addRole()">Thêm vai trò</button>
            </div>
        </div>
    </div>
</div>



<script src="~/js/admin/role.js"></script>

